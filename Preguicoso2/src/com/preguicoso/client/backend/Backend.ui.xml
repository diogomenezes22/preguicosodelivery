<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="container_12" style="min-width:960px;height:600px;">
			<div class="coluna1 grid_2 alpha omega">
				<div class="container_menu">
					<img src="img/logotipo.png" width="190px" />
					<div class="nome_restaurante">
						<img src="img/rest_icone.png" />
						<label>
							<g:InlineLabel text="Nome" ui:field="nomeEstabelecimento" />
						</label>
					</div>
					<div class="nome_menu">
						<div class="nome_menu_detalhe">
							<img src="img/menu_icone.png" />
							<label>Status</label>
						</div>
					</div>
					<div class="delivery_menu">
						<div class="itens_menu">
							<g:ListBox ui:field="status"/>
							<g:Button ui:field="logout" text="Logout"/>
						</div>
					</div>
					<div class="nome_menu">
						<div class="nome_menu_detalhe">
							<img src="img/menu_icone.png" />
							<label>Painel de Controle</label>
						</div>
					</div>
					<div class="itens_menu">
						<div class="itens_menu">
							<div class="menu">
								<g:InlineLabel text="PEDIDOS" ui:field="pedidos"
									styleName="menuItem" />
								<g:InlineLabel text="CARDAPIO" ui:field="cardapio"
									styleName="menuItem" />
								<g:InlineLabel text="RESTAURANTE" ui:field="restaurante"
									styleName="menuItem" />
							</div>
							<g:HTMLPanel ui:field="containerMenu" />
						</div>
					</div>

				</div>
				<br />
			</div>
			<g:HTMLPanel ui:field="container" />

		</div>


	</g:HTMLPanel>
</ui:UiBinder> 