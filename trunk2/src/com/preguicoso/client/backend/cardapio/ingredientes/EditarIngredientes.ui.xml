<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="grid_6 coluna2 alpha omega">
			<h1>Editando Cardápio</h1>
			<div class="container_coluna2">
				<div class="coluna2_barra">
					Ingredientes
				</div>
				<div class="container_ordem_pedidos">
					Nome: <g:TextBox ui:field="nomeIngrediente" /> <br />
					Preço R$ <g:TextBox ui:field="realIngrediente" visibleLength="1" textAlignment="right"/>,<g:TextBox ui:field="centavoIngrediente" maxLength="2" visibleLength="2"/> <br />
					<g:Button ui:field="criar">Criar</g:Button><br />
					<g:HTMLPanel ui:field="listaPanel" styleName="lista" />
				</div>
			</div>
		</div>
		<div id="editarItem"></div>
	</g:HTMLPanel>
</ui:UiBinder> 